<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
      TroyArticles | <%= typeof title !== 'undefined' ? title : 'Default Title' %>
    </title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&family=Open+Sans:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <!-- Icon Fonts -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css"
      rel="stylesheet"
    />

    <!-- TroyArticles Libraries -->
    <link href="/lib/animate/animate.min.css" rel="stylesheet" />
    <link
      href="/lib/owlcarousel/assets/owl.carousel.min.css"
      rel="stylesheet"
    />

    <!-- TroyArticles Bootstrap Theme -->
    <link href="/css/bootstrap.min.css" rel="stylesheet" />

    <!-- TroyArticles Main Styles -->
    <link href="/css/style.css" rel="stylesheet" />
  </head>
  <body>
    <div class="container-fluid p-0">
      <div
        id="spinner"
        class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center"
      >
        <div
          class="spinner-border text-primary"
          style="width: 3rem; height: 3rem"
          role="status"
        >
          <span class="sr-only">Loading...</span>
        </div>
      </div>
      <!-- Topbar -->
      <nav class="navbar navbar-light bg-primary px-4 py-2 text-white">
        <a class="navbar-brand text-white fw-bold" href="#">
          <i class="fa fa-server me-2"></i>TroyArticles Panel
        </a>
        <div class="collapse navbar-collapse">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link text-white" href="#">Profile</a>
            </li>
          </ul>
        </div>
      </nav>
      <div class="row g-0">
        <!-- Sidebar -->
        <div class="col-md-2 bg-dark vh-100 text-white p-3">
          <h5 class="text-white">Menu</h5>
          <br />
          <br />
          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link text-white" href="/articles/admin/list"
                >ðŸ“„ Articles</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" href="/articles/admin/orders"
                >ðŸ’³ Orders List</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" href="/articles/admin/payments"
                >ðŸ’³ Payments</a
              >
            </li>
          </ul>
        </div>
        <!-- Main Content -->
        <div class="col-md-10 p-4">
          <div class="container py-5">
            <div class="row justify-content-center">
              <h2 class="mb-4 text-center">Payments List</h2>
              <% if (payments && payments.length > 0) { %>
              <div class="table-responsive">
                <table class="table table-striped table-bordered align-middle">
                  <thead class="table-light">
                    <tr>
                      <th colspan="8" class="text-center">
                        <h4>Payments</h4>
                      </th>
                    </tr>
                    <tr>
                      <th colspan="8" class="text-center">
                        <div class="mb-3">
                          <input
                            type="text"
                            id="searchInput"
                            class="form-control"
                            placeholder="Search by name or category..."
                            onkeyup="filterTemplates()"
                          />
                        </div>
                      </th>
                    </tr>

                    <tr>
                      <th>#</th>
                      <th>Transaction Date</th>
                      <th>Invoice</th>
                      <th>transId</th>
                      <th>phone</th>
                      <th>MerchantRequestID</th>
                      <th>Amount</th>
                      <th>paymentStatus</th>
                      <th>TransactionStatus</th>
                      <th>Download</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% payments.forEach((payment, index) => { %>
                    <tr
                      data-name="<%= payment.phone.toLowerCase() %>"
                      data-category="<%= payment.invoiceId.toLowerCase() %>"
                    >
                      <td><%= payment.id %></td>
                      <td><%= payment.TransactionDate %></td>
                      <td><%= payment.invoiceId %></td>
                      <td><%= payment.transId %></td>
                      <td><%= payment.phone %></td>
                      <td><%= payment.MerchantRequestID %></td>
                      <td><%= payment.totalAmount %></td>
                      <td><%= payment.paymentStatus %></td>
                    </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
              <% } else { %>
              <p class="text-center text-muted">No Payements Made yet.</p>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>

  <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/lib/wow/wow.min.js"></script>
  <script src="/lib/owlcarousel/owl.carousel.min.js"></script>
  <script src="/js/main.js"></script>
</html>
